{
  "settings": {
    "timeout": 1000
  },
  "relaychain": {
    "chain": "rococo-local",
    "default_command": "polkadot",
    "nodes": [
      {
        "name": "alice",
        "extra_args": [
          "--alice",
          "--no-hardware-benchmarks",
          "--pool-limit=1000000000",
          "--pool-kbytes=10000000000"
        ]
      },
      {
        "name": "bob",
        "extra_args": [
          "--bob",
          "--no-hardware-benchmarks",
          "--pool-limit=1000000000",
          "--pool-kbytes=10000000000"
        ]
      }
    ]
  },
  "parachains": [
    {
      "id": 1000,
      "cumulus_based": true,
      "genesis": {
        "runtime": {
          "balances": {
            "balances": {% include "../funded-accounts.json" %}
          }
        }
      },
      "collator": {
        "name": "collator01",
        "ws_port": "9999",
        "command": "polkadot-parachain",
        "args": [
          "-lparachain=debug"
        ]
      },
      "collator_groups": [
        {
          "name": "stps",
          "args": [
            "-lparachain=debug"
          ],
         "count": "{{SENDERS}}"
        }
      ]
    }
  ]
}
