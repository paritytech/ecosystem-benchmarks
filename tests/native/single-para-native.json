{
  "settings": {
    "timeout": 1000
  },
  "relaychain": {
    "default_image": "docker.io/parity/polkadot:latest",
    "chain": "rococo-local",
    "default_command": "polkadot",
    "genesis": {
    "runtime": {
	"session_length_in_blocks": 15,
        "runtime_genesis_config": {
            "configuration": {
              "config": {
	        "scheduling_lookahead": 2,
		"async_backing_params": {
	          "max_candidate_depth": 3,
	          "allowed_ancestry_len": 2
              }
            }
          }
        }
      }
    },
    "nodes": [
      {
        "name": "alice",
        "validator": true,
          "ws_port": 9944,
          "args": [
            "--alice",
            "-lparachain=debug",
            "--pool-limit=1000000000",
            "--pool-kbytes=10000000000"
          ]
      },
      {
        "name": "bob",
        "validator": true,
        "ws_port": 9945,
        "args": [
          "--bob",
          "-lparachain=debug",
          "--pool-limit=1000000000",
          "--pool-kbytes=10000000000"
        ]
      }
    ]
  },
  "parachains": [
    {
      "id": 1000,
      "cumulus_based": true,
      "genesis": {
        "runtime": {
          "balances": {
            "balances": {% include "../funded-accounts.json" %}
          }
        }
      },
      "collator": {
        "name": "collator01",
        "ws_port": "9999",
        "image": "docker.io/parity/polkadot-parachain",
        "command": "polkadot-parachain",
        "args": [
            "-lparachain=debug",
	    "-lbasic-authorship=debug",
            "--pool-limit=1000000000",
            "--pool-kbytes=10000000000"
        ]
      },
      "collator_groups": [
        {
          "name": "stps",
          "command": "polkadot-parachain",
          "args": [
            "-lparachain=debug",
            "--pool-limit=1000000000",
            "--pool-kbytes=10000000000"
          ],
          "count": "{{SENDERS}}"
        }
      ]
    }
  ]
}
