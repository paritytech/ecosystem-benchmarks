{
    "settings": {
      "timeout": 1000000,
      "node_spawn_timeout": 1200
    },
    "relaychain": {
      "default_image": "docker.io/paritypr/polkadot-debug:v0.9.22",
      "chain": "rococo-local",
      "default_command": "polkadot",
      "genesis": {
        "runtime": {
          "runtime_genesis_config": {
            "balances": {
              "balances": {% include "./funded-accounts.json" %}
            }
          }
        }
      },
      "default_resources": {
        "limits": {
          "memory": "8G",
          "cpu": "4"
        },
        "requests": {
          "memory": "4G",
          "cpu": "2"
        }
      },
      "nodes": [
        {
          "name": "alice",
          "validator": false,
          "args": [
            "--alice",
            "-lparachain=debug",
            "--no-hardware-benchmarks",
            "--pool-limit=1000000000",
            "--pool-kbytes=10000000000"
          ]
        }
      ],
      "node_groups": [
	      {
          "name": "stps",
          "args": [
            "-lparachain=debug",
            "--no-hardware-benchmarks",
            "--pool-limit=1000000000",
            "--pool-kbytes=10000000000"
          ],
	       "count": 3
	      }
      ]
    },
    "types": {
      "Header": {
        "number": "u64",
        "parent_hash": "Hash",
        "post_state": "Hash"
      }
    }
  }
